        function login(by) {
            by =  by || 'google';
            if (by == 'vkontakte') {
                VK.Auth.login(function(response) {
                    if (response.session) {
                        var exdate = new Date();
                        exdate.setMinutes(exdate.getMinutes() + 10);
                        var user = response.session.user;
                        var cookie = 'vk_user_info_' + <?php echo $this->vkAppId;?> +'=';
                        for (key in user) {
                            cookie += key + '=' + escape(user[key]) + '&';
                        }
                        cookie += '; expires=' + exdate.toUTCString();
                        document.cookie = cookie;
                        document.location = '<?php echo $this->vkAuthUrl;?>';
                    } else {
                    }
                });
            } else {
                window.open('/index/auth/by/' + by, 'Auth', 'height=600,width=600,status=no,toolbar=no,menubar=no,location=no, resizable=no');
            }
        }
    </script>
